<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white">



    <TextView
        android:id="@+id/tv_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:drawableTop="@mipmap/ic_icon"
        android:drawablePadding="23dp"
        android:gravity="center"
        android:text="@string/net_error"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_error_title"
        android:layout_alignEnd="@id/tv_error_title"
        android:layout_alignStart="@id/tv_error_title"
        android:text="@string/reload"
        />

</RelativeLayout>